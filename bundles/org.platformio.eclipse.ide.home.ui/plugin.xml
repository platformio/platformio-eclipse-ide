<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.platformio.eclipse.ide.home.internal.ui.HomePerspectiveFactory"
            icon="platform:/plugin/org.platformio.eclipse.ide.ui/icons/eview16/platformio.png"
            id="org.platformio.eclipse.ide.home.ui.perspectives.perspective.home"
            name="%perspective.home.name">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.platformio.eclipse.ide.home.internal.ui.HomeView"
            icon="platform:/plugin/org.platformio.eclipse.ide.ui/icons/eview16/platformio.png"
            id="org.platformio.eclipse.ide.home.ui.views.view.home"
            name="%view.home.name"
            restorable="true">
      </view>
   </extension>

</plugin>
