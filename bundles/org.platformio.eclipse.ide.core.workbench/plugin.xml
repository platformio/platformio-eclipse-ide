<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.platformio.eclipse.ide.ui.views.category.pio"
            name="%category.pio.name">
      </category>
   </extension>
   
   <extension
         point="org.eclipse.ui.console.consoleFactories">
      <consoleFactory
            class="org.platformio.eclipse.ide.core.internal.workbench.terminal.TerminalFactory"
            icon="platform:/plugin/org.eclipse.ui.console/icons/full/cview16/console_view.png"
            label="%consoleFactory.terminal.label">
      </consoleFactory>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.platformio.eclipse.ide.core.internal.workbench.PerspectiveFactory"
            icon="platform:/plugin/org.platformio.eclipse.ide.core.workbench/icons/eview16/platformio.png"
            id="org.platformio.eclipse.ide.home.ui.perspective"
            name="%perspective.name">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.platformio.eclipse.ide.core.internal.workbench.handlers.BuildHandler"
            commandId="org.platformio.eclipse.ide.home.ui.build">
      </handler>
      <handler
            class="org.platformio.eclipse.ide.core.internal.workbench.handlers.UploadHandler"
            commandId="org.platformio.eclipse.ide.home.ui.upload">
      </handler>
      <handler
            class="org.platformio.eclipse.ide.core.internal.workbench.handlers.CleanHandler"
            commandId="org.platformio.eclipse.ide.home.ui.clean">
      </handler>
      <handler
            class="org.platformio.eclipse.ide.core.internal.workbench.terminal.OpenTerminalHandler"
            commandId="org.platformio.eclipse.ide.home.ui.terminal">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.platformio.eclipse.ide.home.ui.build"
            name="%command.build.name">
      </command>
      <command
            id="org.platformio.eclipse.ide.home.ui.clean"
            name="%command.clean.name">
      </command>
      <command
            id="org.platformio.eclipse.ide.home.ui.upload"
            name="%command.upload.name">
      </command>
      <command
            id="org.platformio.eclipse.ide.home.ui.terminal"
            name="%command.terminal.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="org.platformio.eclipse.ide.home.ui.toolbar">
            <command
                  commandId="org.platformio.eclipse.ide.home.ui.build"
                  icon="platform:/plugin/org.eclipse.ui.browser/icons/clcl16/nav_go.png"
                  label="%command.build.name"
                  style="push">
            </command>
            <command
                  commandId="org.platformio.eclipse.ide.home.ui.upload"
                  icon="platform:/plugin/org.eclipse.ui/icons/full/elcl16/forward_nav.png"
                  label="%command.upload.name"
                  style="push">
            </command>
            <command
                  commandId="org.platformio.eclipse.ide.home.ui.clean"
                  icon="platform:/plugin/org.eclipse.ui/icons/full/elcl16/trash.png"
                  label="%command.clean.name"
                  style="push">
            </command>
            <command
                  commandId="org.platformio.eclipse.ide.home.ui.terminal"
                  icon="platform:/plugin/org.eclipse.ui.console/icons/full/cview16/console_view.png"
                  label="%command.terminal.name"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
